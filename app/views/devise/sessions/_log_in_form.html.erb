<div class="container-fluid text-center mt-4 col-4">
  <%= link_to("kitten pixtore.", root_path, class: "navbar-brand mt-4 ml-3 font-weight-bold") %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2 class="mt-3">Connectez-vous</h2>
    <hr>
    <form class="md-5">
      <fieldset>
        <div class="form-group mt-3">
          <div class="mr-5 ml-5">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Adresse email", class: "form-control" %>
          </div>
        </div>
        <div class="form-group mt-4">
          <div class="mr-5 ml-5">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Mot de passe", class: "form-control" %>
          </div>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field text-left mr-5 ml-5">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Se souvenir de moi" %>
          </div>
        <% end %>
        <%= f.submit "Se connecter", class: "btn btn-secondary mt-4 md-3 font-weight-bold" %>
      </fieldset>
    </form>
  <% end %>
  <div class="separator mt-4 ">Vous n'avez pas encore de compte ?</div>
  <%= link_to("S'inscrire", new_user_registration_path ,class: "btn btn-success mt-4 md-5 font-weight-bold") %>
</div>