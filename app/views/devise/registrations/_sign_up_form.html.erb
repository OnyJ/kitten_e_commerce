<div class="container-fluid text-center mt-4 col-4">
  <%= link_to "kitten pixtore.", root_path, class: "navbar-brand mt-4 ml-3 font-weight-bold" %>
  <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin mt-3" } do |f| %>
  <%= render partial: "layouts/error", locals: { resource: resource } %>
  <h2 class="mt-3">Inscrivez-vous</h2>
  <hr>
  <form class="md-5">
    <fieldset>
      <div class="form-group mt-3">
        <%= f.label :email, "Utilisez votre adresse email pour commencer" %><br />
        <div class="mr-5 ml-5">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Adresse email", class: "form-control" %>
        </div>
      </div>
      <div class="form-group mt-4">
        <div class="mr-5 ml-5">
          <%= f.password_field :password, autocomplete: "new-password", placeholder:"Mot de passe", class: "form-control" %>
        </div>
        <small id="emailHelp" class="form-text text-muted"><i class="fas fa-info-circle mr-1"></i>Le nombre de caractères de votre mot de passe doit être supérieur à 6.</small>
      </div>
      <div class="form-group">
        <div class="mr-5 ml-5">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirmation du mot de passe", class: "form-control" %>
        </div>
      </div>
      <%= f.submit "Commencer", class: "btn btn-success mt-3 md-3 font-weight-bold" %>
    </fieldset>
  </form>
  <% end %>
  <div class="separator mt-4 ">Vous avez déjà un compte ?</div>
  <%= link_to "Se connecter", new_user_session_path, class: "btn btn-secondary mt-4 md-5 font-weight-bold" %>
</div>