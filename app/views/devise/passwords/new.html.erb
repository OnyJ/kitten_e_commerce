<div class="container-fluid text-center mt-4 mb-4 col-4">
  <%= link_to "kitten pixtore.", root_path, class: "navbar-brand mt-4 ml-3 font-weight-bold" %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <h2 class="mt-3">Vous avez oublié votre mot de passe ?</h2>
    <hr>
    <%= render "devise/shared/error_messages", resource: resource %>
    <form class="md-5">
      <fieldset>
        <div class="form-group mt-3">
          <%= f.label :email, "Utilisez l'adresse email avec laquelle vous êtes inscrit." %><br />
          <div class="mr-5 ml-5">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Votre adresse email", class: "form-control" %>
          </div>
        </div>
        <%= f.submit "Envoyer le lien de réinitialisation", class: "btn btn-sm btn-success mt-2 mb-5 font-weight-bold" %>
      </fieldset>
    </form>
  <% end %>
</div>